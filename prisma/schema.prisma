generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Analytics {
  analyticsId String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cityIp      String
  country     String
  state       String
  region      String   @unique

  metrics Metrics[]

  @@map("analytics")
}

model Metrics {
  metricsId   String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  total_games Int
  analyticsId String
  analytics   Analytics @relation(fields: [analyticsId], references: [analyticsId], onDelete: Cascade)

  @@index([analyticsId])
  @@map("metrics")
}
