generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model GameSession {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())

  // Location Data
  city          String?
  region        String?
  country       String?

  // Game Result
  wasSuccessful Boolean
  wrongGuesses  String[]

  // Feedback
  likertAnswers Json
  starRating    Int
}
